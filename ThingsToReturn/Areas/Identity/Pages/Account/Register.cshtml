@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<div class="row" style="margin-top: 10px">
    <div class="col-md-4">
        <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <h3>Create a new account.</h3>
            <hr />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-floating">
                <input asp-for="Input.Email" class="form-control"  aria-required="true" />
                <label asp-for="Input.Email"></label>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-floating" style="margin-top: 10px">
                <input asp-for="Input.Password" class="form-control"  aria-required="true" />
                <label asp-for="Input.Password"></label>
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="form-floating" style="margin-top: 10px">
                <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" />
                <label asp-for="Input.ConfirmPassword"></label>
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
            <div class="form-floating" style="margin-top: 10px">
                <input asp-for="Address.Country" class="form-control"  aria-required="true" />
                <label asp-for="Address.Country"></label>
                <span asp-validation-for="Address.Country" class="text-danger"></span>
            </div>
            <div class="form-floating" style="margin-top: 10px">
                <input asp-for="Address.City" class="form-control" aria-required="true" />
                <label asp-for="Address.City"></label>
                <span asp-validation-for="Address.City" class="text-danger"></span>
            </div>
            <div class="form-floating" style="margin-top: 10px">
                <input asp-for="Address.ZipCode" class="form-control"  aria-required="true" />
                <label asp-for="Address.ZipCode"></label>
                <span asp-validation-for="Address.ZipCode" class="text-danger"></span>
            </div>
            <div class="form-floating" style="margin-top: 10px">
                <input asp-for="Address.Street" class="form-control"  aria-required="true" />
                <label asp-for="Address.Street"></label>
                <span asp-validation-for="Address.Street" class="text-danger"></span>
            </div>
            <div class="form-floating" style="margin-top: 10px">
                <input asp-for="Address.BuildingNr" class="form-control"  aria-required="true" />
                <label asp-for="Address.BuildingNr"></label>
                <span asp-validation-for="Address.BuildingNr" class="text-danger"></span>
            </div>
            <div class="form-floating" style="margin-top: 10px">
                <input asp-for="Address.ApartmentNr" class="form-control" aria-required="true" />
                <label asp-for="Address.ApartmentNr"></label>
                <span asp-validation-for="Address.ApartmentNr" class="text-danger"></span>
            </div>
            <button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-primary"  style="margin-top: 10px">Register</button>
        </form>
    </div>
    <div class="col-md-6 col-md-offset-2">
        <section>
            <h3>Use another service to register.</h3>
            <hr />
            @{
                if ((Model.ExternalLogins?.Count ?? 0) == 0)
                {
                    <div>
                        <p>
                            There are no external authentication services configured. See this <a href="https://go.microsoft.com/fwlink/?LinkID=532715">article
                            about setting up this ASP.NET application to support logging in via external services</a>.
                        </p>
                    </div>
                }
                else
                {
                    <form id="external-account" asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" method="post" class="form-horizontal">
                        <div>
                            <p>
                                @foreach (var provider in Model.ExternalLogins)
                                {
                                    <button type="submit" class="btn btn-primary" name="provider" value="@provider.Name" title="Log in using your @provider.DisplayName account">@provider.DisplayName</button>
                                }
                            </p>
                        </div>
                    </form>
                }
            }
        </section>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
