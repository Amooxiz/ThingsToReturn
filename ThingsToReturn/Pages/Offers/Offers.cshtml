@page
@model ThingsToReturn.Pages.OffersModel
@{
}


 <form class="row g-3 align-items-md-start" method="post" asp-page-handler="select">
   <div class="col-md-2">
        <label asp-for="FilterChoices.Categories" class="form-label mt-4">Categories (up to 3)</label>
        <select asp-for="FilterChoices.Categories" multiple class="form-control" id="" size="3">
            @foreach(var category in Model.CategoryList.Categories)
            {
                <option value="@category.Id">@category.Name</option>
            }
        </select>
        <span asp-validation-for="FilterChoices.Categories" class="text-danger"></span>
    </div>
    <div class="col-md-2">
        <label asp-for="FilterChoices.CreationDateFrom" class="form-label mt-4">Creation date from</label>
        <input asp-for="FilterChoices.CreationDateFrom" class="form-control"/>
    </div>
    <div class="col-md-2">
        <label asp-for="FilterChoices.CreationDateTo" class="form-label mt-4">Creation date to</label>
        <input asp-for="FilterChoices.CreationDateTo" class="form-control"/>
    </div>
    <div class="col-md-2">
        <label asp-for="FilterChoices.ExpirationDateFrom" class="form-label mt-4">Expiration date from</label>
        <input asp-for="FilterChoices.ExpirationDateFrom" class="form-control"/>
    </div>

    <div class="col-md-2">
        <label asp-for="FilterChoices.ExpirationDateTo" class="form-label mt-4">Expiration date to</label>
        <input asp-for="FilterChoices.ExpirationDateTo" class="form-control"/>
    </div>
    <div  class="axis main-axis">
        <button class="btn btn-primary " type="submit">Szukaj</button>
    </div>
    <hr />
</form>

<h2 class="card-body">We found @Model.OfferList.Count advertisements</h2>
<div class="grid-offers-container">
    @foreach(var offer in Model.OfferList.Offers)
    {
        <div class="offers-row-grid-box" style="width: 75%">
            <div  class="img">
               <img src="@offer.ImagePath" />
            </div>
            <div class="row-box-1">
               <h6 class="card-header"> @(offer.Name)</h6>
            </div>
            <div class="row-box-2">
                <p >
                   @offer.Description
                </p>
            </div>
        </div>
    }
</div>